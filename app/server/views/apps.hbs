<table>
    <tr>
        <td>&nbsp;</td>
    </tr>
    {{#each apk}}
        <tr>
            <td class="provider">{{@key}}</td>
        </tr>
        {{#each this}}
            <tr>
                <td class="label">
                    {{#if this.label}}
                        {{this.label}}
                    {{/if}}
                </td>

                <td class="version" {{#if this.arch}}title="{{this.arch}}"{{/if}}>
                    {{#if this.version}}
                        {{this.version}}
                    {{/if}}
                </td>

                <td class="pkg">
                    {{#if this.pkg}}
                        {{this.pkg}}
                    {{/if}}
                </td>

                <td class="date">
                    {{#if this.date}}
                        {{this.date}}
                    {{/if}}
                </td>

                <td class="size">
                    {{#and this.size.value this.size.unit}}
                        {{this.size.value}}&#8239;{{this.size.unit}}
                    {{/and}}
                </td>

                <td class="main_link">
                    {{#if this.download.original}}
                        <a href="{{this.download.original}}">download</a>
                    {{/if}}
                </td>

                <td class="extra_link">
                    {{#if this.download.mirror}}
                        <a href="{{this.download.mirror}}">[mirror]</a>
                    {{/if}}
                    {{#if this.homepage}}
                        <a href="{{this.homepage}}">[homepage]</a>
                    {{/if}}
                    {{#if this.obtainium.original}}
                        <a href="{{this.obtainium.original}}" title="obtainium: import original url">[obm:original]</a>
                    {{/if}}
                    {{#if this.obtainium.mirror}}
                        <a href="{{this.obtainium.mirror}}" title="obtainium: import mirror url">[obm:mirror]</a>
                    {{/if}}
                </td>
            </tr>
        {{/each}}
        <tr class="empty">
            <td>&nbsp;</td>
        </tr>
    {{/each}}
</table>

<div class="raw">
    {{#each apk}}
        {{#each this}}
            <br>
            {{this.pkg}} {{this.version}}
            <br>
            {{this.label}} {{this.version}}
        {{/each}}
    {{/each}}
</div>

<div class="info">
    <p>
        Updated
        <br>
        <span class="data">— {{timestamp}}</span>
    </p>
    {{#if errors}}
        <p>
            Errors
            <br>
            {{#each errors}}
                <span class="data">
                    — <a href="{{this}}">{{this}}</a>
                </span>
                <br>
            {{/each}}
        </p>
    {{/if}}
    <p>
        Visits
        <br>
        {{#each ua}}
            <span class="data">— {{this}}</span>
            <br>
        {{/each}}
    </p>
</div>
