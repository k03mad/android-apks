<table>
    <tr>
        <td>&nbsp;</td>
    </tr>
    {{#each apk}}
        <tr class="provider">
            <td>[{{@key}}]</td>
        </tr>
        {{#each this}}
            <tr>
                <td class="label">
                    {{#if this.label}}
                        {{this.label}}
                    {{/if}}
                </td>

                <td class="version" {{#if this.arch}}title="{{this.arch}}"{{/if}}>
                    {{#if this.version}}
                        {{this.version}}
                    {{/if}}
                </td>

                <td class="pkg">
                    {{#if this.pkg}}
                        {{this.pkg}}
                    {{/if}}
                </td>

                <td class="date">
                    {{#if this.date}}
                        {{this.date}}
                    {{/if}}
                </td>

                <td class="size">
                    {{#and this.size.value this.size.unit}}
                        {{this.size.value}}&nbsp;{{this.size.unit}}
                    {{/and}}
                </td>

                {{#and this.origDownloadLink this.fileName}}
                    <td class="link">
                        <a href="{{this.origDownloadLink}}">{{this.fileName}}</a>
                    </td>
                {{else}}
                    <td class="file">
                        {{#if this.fileName}}
                            {{this.fileName}}
                        {{/if}}
                    </td>
                {{/and}}

                <td>
                    {{#and this.relativeDownloadLink this.label}}
                        <a class="mirror" href="{{this.relativeDownloadLink}}">[зеркало]</a>
                    {{/and}}
                </td>
            </tr>
        {{/each}}
        <tr>
            <td>&nbsp;</td>
        </tr>
    {{/each}}
</table>

<div class="raw">
    {{#each apk}}
        {{#each this}}
            <br>
            {{this.pkg}} {{this.version}}
            <br>
            {{this.label}} {{this.version}}
        {{/each}}
    {{/each}}
</div>

<div class="info">
    <p>
        Обновлено:
        <br>
        <span class="data">— {{timestamp}}</span>
    </p>
    {{#if errors}}
        <p>
            Не удалось скачать:
            <br>
            {{#each errors}}
                <span class="data">
                    — <a class="link" href="{{this}}">{{this}}</a>
                </span>
                <br>
            {{/each}}
        </p>
    {{/if}}
    <p>
        Посетители:
        <br>
        {{#each ua}}
            <span class="data">— {{this}}</span>
            <br>
        {{/each}}
    </p>
</div>
